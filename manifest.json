{
  "manifest_version": 3,
  "name": "Navigation Logger",
  "version": "1.0",
  "description": "Logs URLs of pages as the user navigates, including redirects.",
  "permissions": [
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.png"
  }
}